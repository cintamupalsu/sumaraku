<%provide(:title,"User Roles")%>
<div class="row bg-white border rounded-bottom rounded-3 shadow">
    <div class="col-12 border">
        <div class="row">
            <div class="col-2 pt-1">
                <%= link_to 'üîôÊàª„Çã', usermanage_path, class:"btn btn-outline-primary btn-sm" %>
            </div>
            <div class="col-10">
                <h3>„É¶„Éº„Ç∂„ÉºÂêç: <%= @user.name %></h3>
            </div>
        </div>
        <div class="card">
            <div class="card-header text-center">
                <h4> User roles </h4>
            </div>
            <div class="card-body">
                <%= form_for(:update_roles, url: update_roles_path) do |f| %>
